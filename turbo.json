{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "check-types"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build", "check-types"],
      "outputs": ["storybook-static/**"]
    },
    "check-types": {},
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    }
  }
}
